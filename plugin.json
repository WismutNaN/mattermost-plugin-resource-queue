{
    "id": "com.scientia.resource-queue",
    "name": "Resource Queue",
    "description": "Track and manage shared resources (remote PCs, services) with booking and queue system",
    "homepage_url": "https://github.com/scientia/mattermost-plugin-resource-queue",
    "support_url": "https://github.com/scientia/mattermost-plugin-resource-queue/issues",
    "icon_path": "assets/icon.svg",
    "version": "0.1.0",
    "min_server_version": "7.0.0",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "linux-arm64": "server/dist/plugin-linux-arm64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        },
        "executable": ""
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "Resource Queue Plugin Settings",
        "footer": "Use slash commands or the sidebar button to manage resources.",
        "settings": [
            {
                "key": "EnablePlugin",
                "display_name": "Enable Plugin",
                "type": "bool",
                "default": true,
                "help_text": "Enable or disable the Resource Queue plugin."
            },
            {
                "key": "NotifyBeforeMinutes",
                "display_name": "Notify Before Expiry (minutes)",
                "type": "text",
                "default": "10",
                "help_text": "How many minutes before booking expiry to send a notification."
            },
            {
                "key": "MaxBookingHours",
                "display_name": "Max Booking Duration (hours)",
                "type": "text",
                "default": "24",
                "help_text": "Maximum booking duration in hours."
            },
            {
                "key": "CheckIntervalSeconds",
                "display_name": "Scheduler Check Interval (seconds)",
                "type": "text",
                "default": "30",
                "help_text": "How often to check for expiring bookings."
            }
        ]
    }
}
